<% provide :title, "All User Manager" %>
<h1>All User Manager</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(admin_users_path, method: :get) do %>
      <div class="col-md-9">
        <%= text_field_tag :name, params[:name], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= submit_tag t(:search), name: nil, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
</br >

<% if @users.any? %>
  <div class="text-center">
    <%= will_paginate @users %>
  </div>
  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
      <th></th>
    </tr>
    <%= render @users %>
  </table>
  <div class="text-center">
    <%= will_paginate @users %>
  </div>
<% else %>
  <p>No users found!</p>
<% end %>
