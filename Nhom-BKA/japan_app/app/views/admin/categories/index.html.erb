<% provide :title, "Categories" %>
<h3>Categories Management</h3>
<hr/>

<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to new_admin_category_path, class: "btn btn-primary" do %>
        <span class="glyphicon glyphicon-plus-sign"></span> Create new
      <% end %>
    </div>
  </div>
</div>
<br/>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag admin_categories_path, method: :get do %>
      <div class="col-md-9">
        <%= text_field_tag :name, params[:name], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
</br >

<% if @categories.any? %>
  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
    <%= render @categories %>
  </table>
  <div class="text-center">
    <%= will_paginate %>
  </div>
<% else %>
  <p>No category found</p>
<% end %>
