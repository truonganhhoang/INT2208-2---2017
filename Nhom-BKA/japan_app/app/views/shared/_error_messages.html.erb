<% if defined?(object) && object.errors.any? %>
  <div class="error_explantion">
    <div class="alert alert-danger">
      The form contains <%= pluralize object.errors.count, "error" %>.
    </div>
    <ul>
      <% object.errors.each do |attr, msg| %>
        <li><%= "#{attr.capitalize} #{msg}" %></li>
      <% end %>
    </ul>
  </div>
<% end %>
