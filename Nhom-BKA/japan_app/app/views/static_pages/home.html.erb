<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "users/user_info" %>
      </section>
      <section>
        <%= render "shared/stats" %>
      </section>
    </aside>
    <div class="col-md-8">
      <div class="row btn-action-home">
        <div class="col-md-4 col-md-offset-1">
          <%= link_to "Word List", words_path,
            class: "btn btn-success btn-block" %>
        </div>
        <div class="col-md-4 col-md-offset-2">
          <%= link_to "Lesson", categories_path,
            class: "btn btn-primary btn-block" %>
        </div>
      </div>
      <hr/>
      <%= render "shared/activities", activities: @activities %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t(".greeting") + " " + t("base_title") %></h1>
    <h2>
      <%= t ".intro" %>
    </h2>

    <%= link_to t(".signupnow"), signup_path, class: "btn btn-lg btn-primary" %>
    </h2>
  </div>
<% end %>
